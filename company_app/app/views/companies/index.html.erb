<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.employees.count %></td>
        <td>
          <%= link_to 'Edit', edit_company_path(company) %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
        <%
          company_areas = {}
          company.employees.each do |e|
            if company_areas.key?(e.area.name)
              company_areas[e.area.name] += 1
            else
              company_areas[e.area.name] = 1
            end
          end
        %>
        <% company_areas.each do |key, value| %>
        <tr class="active">
          <td><%= key %></td>
          <td colspan="2"><%= value %></td>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %>
